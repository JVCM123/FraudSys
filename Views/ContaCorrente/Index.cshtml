@model ContaCorrenteLimiteViewModel
@{
    ViewData["Title"] = "Pesquisar Contas";
}

<div class="row justify-content-around">
    <h2 class="col">Pesquisar Limite</h2>
    <a asp-action="Create" class="btn btn-primary col-1">Adicionar</a>
</div>

<hr />

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="NumAgencia"></label>
        <input asp-for="NumAgencia" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NumConta"></label>
        <input asp-for="NumConta" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary mt-2">Pesquisar</button>
</form>

@if (Model is not null)
{
    <hr />
    <h4>Resultado</h4>
    <p><strong>Agência:</strong> @Model.NumAgencia</p>
    <p><strong>Conta:</strong> @Model.NumConta</p>
    <p><strong>Documento:</strong> @Model.Documento</p>
    <p><strong>Limite PIX:</strong> R$ @Model.LimitePix?.ToString("N2")</p>

    <a asp-action="Details" asp-route-agencia="@Model.NumAgencia" asp-route-conta="@Model.NumConta" class="btn btn-info">Detalhes</a>
    <a asp-action="Edit" asp-route-agencia="@Model.NumAgencia" asp-route-conta="@Model.NumConta" class="btn btn-warning">Editar</a>
}