
@if (TempData["Sucesso"] is not null)
{
    <script>
        Swal.fire({
            title: 'Sucesso!',
            text: '@Html.Raw(TempData["Sucesso"].ToString())',
            icon: 'success',
            buttons: {
                confirm: {
                    text: 'Fechar',
                    value: true,
                    visible: true,
                    className: 'btn btn-primary',
                    closeModal: true
                }
            }
        });
    </script>
}

@if (TempData["Erro"] is not null)
{
    <script>
        
        Swal.fire({
            title: 'Opa!',
            text: '@Html.Raw(TempData["Erro"].ToString())',
            icon: 'error',
            buttons: {
                confirm: {
                    text: 'Fechar',
                    value: true,
                    visible: true,
                    className: 'btn btn-danger',
                    closeModal: true
                }
            }
        });
    </script>
}
  